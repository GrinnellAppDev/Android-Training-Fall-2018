<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogActivity">

    <ImageView
        android:id="@+id/dogView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/dogSleepingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Dog Sleep Time"
        android:layout_centerHorizontal="true"/>
    
    <Button
        android:id="@+id/sleepDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dogSleepingTime"
        android:layout_centerHorizontal="true"
        android:text="Click me to Sleep Dog"
        android:onClick="runSleep"/>

    <TextView
        android:id="@+id/dogPageVisitsCount"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="1"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"/>


</RelativeLayout>